<div class="text-center">
  <form method="post" class="postForm" action="/api/posts">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" name="title" type="text" id="post-title" />
    </div>
    <div class="form-group">
      <label for="post-content">Text:</label>
      <textarea class="form-input" name="postContent" id="post-content" rows="3"
        placeholder="Enter your post here"></textarea>
    </div>
    <button type="submit" id="submitPost" class="btn btn-primary">Submit</button>
    <a class="btn btn-primary" href="/dashboard">Back</a>
  </form>
</div>

<script src="/js/post.js"></script>