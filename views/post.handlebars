<div class="text-center">
  <form method="post" class="postForm" action="/dashboard">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" type="text" id="post-title" />
    </div>
    <div class="form-group">
      <label for="post-content">Text:</label>
      <textarea class="form-input" id="blog" rows="3"
        placeholder="Enter your post here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-primary " href="/dashboard">Back</a>
  </form>
</div>