<div class="text-center">
  <form method="put" post-id="{{id}}" class="updateForm">
    <div class="form-group">
      <label for="post-title">Title:</label>
      <input class="form-input" name="title" type="text" id="post-title" value="{{post_title}}"/>
    </div>
    <div class="form-group">
      <label for="post-content">Text:</label>
      <textarea class="form-input" name="postContent" id="post-content">{{post_postContent}}</textarea>
    </div>
    <button type="submit" id="update" class="btn btn-primary">Update</button>
    <a class="btn btn-primary" href="/dashboard">Back</a>
  </form>
</div>

<script src="/js/post.js"></script>