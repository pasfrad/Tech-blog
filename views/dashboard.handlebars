<div class="create-post">
  <button class="btn btn-primary" type="submit">New Post</button>
</div>
{{#each posts as |post| }}
<div class="row mb-4">
  <div class="card col-md-5 border-danger mb-3">
    <h5 class="card-header">{{post.title}}</h5>
    <div class="card-body">
      <h6 class="card-title mb-2 text-muted">Created by {{post.user.name}} on {{format_date post.date_created}}</h6>
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
</div>
{{/each}}